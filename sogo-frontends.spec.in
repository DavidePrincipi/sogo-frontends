Name:		sogo-frontends
Version:	@@VERSION@@
Release:	@@RELEASE@@
Summary:	SOGo Thunderbird frontends bundle
License:	GPL
URL:		http://dev.nethesis.it/projects/nethserver-mail/wiki/%{name}
BuildArch:	noarch
Source:		%{name}-%{version}.tar.gz

BuildRequires: nethserver-devtools

%description
SOGo Thunderbird frontends bundle

%prep
%setup
make download check

%build
make install DESTDIR=root/usr/share/nethserver/sogo-frontends

%install
(cd root; find . -depth -print | cpio -dump $RPM_BUILD_ROOT)
%{genfilelist} $RPM_BUILD_ROOT > %{name}-%{version}-filelist
echo "%doc COPYING" >> %{name}-%{version}-filelist

%files -f %{name}-%{version}-filelist
%defattr(-,root,root)

%post
# Conditionally refresh MANIFEST info, 
# if nethserver-sogo-thunderbird is available
[ -x /sbin/e-smith/signal-event ] && 
    [ -d /etc/e-smith/events/nethserver-sogo-thunderbird-update ] &&
        /sbin/e-smith/signal-event nethserver-sogo-thunderbird-update


